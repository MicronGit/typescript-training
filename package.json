{
  "name": "typescript-training",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "tsx src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:up": "cd ./database/local && docker-compose up",
    "db:logs": "cd ./database/local && docker-compose logs",
    "db:down": "cd ./database/local && docker-compose down",
    "db:clean": "cd ./database/local && docker-compose down -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MicronGit/typescript-training.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MicronGit/typescript-training/issues"
  },
  "homepage": "https://github.com/MicronGit/typescript-training#readme",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
